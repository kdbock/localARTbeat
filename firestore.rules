    // Admin collections
    match /admin/{document=**} {
      allow read, write: if isAuthenticated() && isAdmin(request.auth.uid);
    }

    // Catch-all rule for admin access to everything not covered by specific rules above
    match /{document=**} {
      allow read, write: if isAuthenticated() && isAdmin(request.auth.uid);
    }
  }
}
